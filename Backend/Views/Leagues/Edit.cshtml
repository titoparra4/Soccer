@model Backend.Models.LeagueView

@{
    ViewBag.Title = "Edit";
}
<br />
<br />
<h2 class="text-center">Edit League</h2>
<br />
<br />
@using (Html.BeginForm("Edit", "Leagues", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LeagueId)
        @Html.HiddenFor(model => model.Logo)


        <div class="form-group">
            
            <div class="col-md-6">
                <h5>League:</h5>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            
            <div class="col-md-6">
                <h5>Logo:</h5>
                <span class="btn-file btn btn-dark">
                    @Html.TextBoxFor(modelo => modelo.LogoFile, new { type = "file" })
                </span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6 text-right">
                @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-success" })
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
