            <h6>@Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label col-md-2" })</h6>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6 text-right">

                @Html.ActionLink("Back to Group", "DetailsGroup", new { id = Model.TournamentGroupId }, new { @class = "btn btn-success" })
